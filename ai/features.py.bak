# backup of previous features.py

import re

def extract_features_from_text(text):
    scene_pattern = r"\b(?:INT\.|EXT\.)"
    scenes = re.findall(scene_pattern, text, flags=re.IGNORECASE)
    unique_scenes = len(set(scenes))
    total_words = len(re.findall(r"\w+", text))
    normalized_words = total_words / 100
    return [normalized_words, unique_scenes]

if __name__ == '__main__':
    sample = "INT. HOUSE\nEXT. PARK\nINT. HOUSE"
    print(extract_features_from_text(sample))

